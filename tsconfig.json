    },
    {
      "path": "./projects/users/tsconfig.app.json"
    },
    {
      "path": "./projects/users/tsconfig.spec.json"
    },
    {
      "path": "./projects/shared-ui/tsconfig.lib.json"
    },
    {
      "path": "./projects/shared-ui/tsconfig.spec.json"
    },
    {
      "path": "./projects/shared-models/tsconfig.lib.json"
    },
    {
      "path": "./projects/shared-models/tsconfig.spec.json"
    },
    {
      "path": "./projects/shared-data-access/tsconfig.lib.json"
    },
    {
      "path": "./projects/shared-data-access/tsconfig.spec.json"
    },
    {
      "path": "./projects/shared-store/tsconfig.lib.json"
