{
  "name": "angular-mfe-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "tailwind:init": "tailwindcss init",
    "start:host": "ng serve host --port 4200",
    "start:products": "ng serve products --port 4201",
    "start:orders": "ng serve orders --port 4202",
    "start:users": "ng serve users --port 4203",
    "start:all": "concurrently \"npm run start:host\" \"npm run start:products\" \"npm run start:orders\" \"npm run start:users\"",
    "build:libs": "ng build shared-ui && ng build shared-models && ng build shared-data-access"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ngrx/effects": "^21.0.1",
    "@ngrx/store": "^21.0.1",
    "@ngrx/store-devtools": "^21.0.1",
    "@softarc/native-federation-node": "^3.3.4",
    "es-module-shims": "^1.5.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-architects/native-federation": "^21.1.1",
    "@angular-devkit/build-angular": "^21.1.4",
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
